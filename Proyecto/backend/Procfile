web: bash -lc "
  # 1) Construir el frontend con base correcta para /static/frontend/
  cd ../frontend && npm ci && npm run build -- --base=/static/frontend/ && \
  # 2) Copiar el build a static/frontend del backend
  cd ../backend && mkdir -p static/frontend && rm -rf static/frontend/* && cp -r ../frontend/dist/* static/frontend/ && \
  # 3) Migraciones y collectstatic
  python manage.py migrate --noinput && \
  python manage.py collectstatic --noinput && \
  # 4) Levantar Gunicorn
  gunicorn claro_project.wsgi:application --workers 2 --timeout 120 --bind 0.0.0.0:$PORT
"
